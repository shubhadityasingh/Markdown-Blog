<div class="form-group mb-2">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" class="form-control" id="title" name="title">
</div>
<div class="form-group mb-2">
    <label for="description">Description</label>
    <textarea required type="text" class="form-control" id="description" name="description"><%=article.description%></textarea>
</div>
<div class="form-group mb-2">
    <label for="markdown">Markdown</label>
    <textarea required type="text" class="form-control" id="markdown" name="markdown"><%=article.markdown%></textarea>
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>